@{
    ViewBag.Title = "Home Page";
}
<style>
    span.highlight {
        background-color: #2A9FD6;
    }
</style>
<!-- Carousel
   ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="first-slide" src="~/Images/banner3.jpg" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Did You Know That ?</h1>
                    <p><span class="highlight">The average carpooler can cut out as much as $600 each month on the cost of their commuting drive</span></p>
                    
                </div>
            </div>
        </div>
        <div class="item">
            <img class="second-slide" src="~/Images/save-earth.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Or That?</h1>
                    <p><span class="highlight">By carpooling just twice a week, 1,600 pounds of greenhouse gases can be kept out of the air each year</span></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img class="third-slide" src="~/Images/Baby-Pandas-22.jpg" alt="Third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Which Means...</h1>
                    <p><span class="highlight">The climate change is the biggest threat to survival of pandas and you can change it</span></p>
                 </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div><!-- /.carousel -->
<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->
<div class="container marketing">
    <!-- Three columns of text below the carousel -->
    <div class="row">
        <div class="col-lg-4">
            <img class="img-circle" src="~/Images/hand.jpg" alt="Generic placeholder image" width="140" height="140">
            <h2>Host</h2>
            <p><a class="btn btn-default" href="#host" role="button">View details &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
            <img class="img-circle" src="~/Images/girl-asking-for-lift.jpg" alt="Generic placeholder image" width="140" height="140">
            <h2>Request</h2>
            <p><a class="btn btn-default" href="#request" role="button">View details &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
            <img class="img-circle" src="~/Images/roadtrip.jpg" alt="Generic placeholder image" width="140" height="140">
            <h2>Group</h2>
            <p><a class="btn btn-default" href="#group" role="button">View details &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
    </div><!-- /.row -->
    <!-- START THE FEATURETTES -->
    <hr class="featurette-divider">
    <div class="row featurette">
        <div class="col-md-7" id="host">
            <h2 class="featurette-heading"><a href="~/Pools/Create"> Host a Ride <span class="text-muted">  Save a Panda! </span></a></h2>
            <p class="lead">Create a one-time or daily ride. Use your car, get some people to join you and start sharing and saving right away!!!</p>
        </div>
        <div class="col-md-5">
            <img class="featurette-image img-responsive center-block" src="~/Images/carpool_icon.jpg" alt="Generic placeholder image">
        </div>
    </div>
    <hr class="featurette-divider">
    <div class="row featurette">
        <div class="col-md-7 col-md-push-5" id="request">
            <h2 class="featurette-heading"><a href="~/Requests/Create">  Request a ride.<span class="text-muted">You don't have a car? Just ask</span></a></h2>
            <p class="lead">Log a one-time or a regular ride request and we will match you with a host in no time!!! </p>
        </div>
        <div class="col-md-5 col-md-pull-7">
            <img class="featurette-image img-responsive center-block" src="~/Images/girl-on-the-road-wants-lift.jpg" alt="Generic placeholder image">
        </div>
    </div>
    <hr class="featurette-divider">
    <div class="row featurette">
        <div class="col-md-7" id="group">
            <h2 class="featurette-heading"><a href="~/Groups/Index">Groups!! <span class="text-muted">Share rides with friends</span></a></h2>
            <p class="lead">Use this option to plan trips and daily commutes with friends. Add buddies and share rides within your group</p>
        </div>
        <div class="col-md-5">
            <img class="featurette-image img-responsive center-block" src="~/Images/636013546659815982960005097_o-ROAD-TRIP-facebook.jpg" alt="Generic placeholder image">
        </div>
    </div>
    <hr class="featurette-divider">
    <!-- /END THE FEATURETTES -->

</div>